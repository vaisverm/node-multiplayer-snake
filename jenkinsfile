pipeline {
  agent any
    
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/vaisverm/node-multiplayer-snake.git'
      }
    }
     
    stage('Build') {
      steps {
        sh 'npm install'
      }
    }  
    
            
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
	
   //stage('Start') {
   //     steps {
   //     sh 'npm start'
   //   }
   // }
   
   stage('SonarQubeScan') {
   steps {
   withSonarQubeEnv('Sonar'){
     sh 'mvn sonar:sonar'
     }
   }
 }
   
   stage('Docker Deployment') {
      steps {
        sh 'docker build -t nodeapp:v2 .'
	sh 'docker run -d --name test-snake-2 nodeapp:v2'
      }
    }
  }
}
